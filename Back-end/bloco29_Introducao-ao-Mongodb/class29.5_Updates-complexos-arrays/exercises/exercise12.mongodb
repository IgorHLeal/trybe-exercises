use ('cinema');

db.movies.updateOne(
  { 
    title: { $eq: 'Batman' },
    'cast.character': { $eq: 'Batman' }
  },
  {
    $push: {
      'cast.$.actor': {
        $each: ['Michael Keaton', 'Val Kilmer', 'George Clooney'],
        $sort: 1,
      },
    },
  },
);

db.movies.find();